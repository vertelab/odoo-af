<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherited.case</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <!-- <button class="oe_stat_button" type="object"
                    name="view_case"
                    icon="fa-pencil-square-o"
                    groups="sales_team.group_sale_salesman"
                    context="{'partner_id': active_id, 'partner_name': name}">
                    <field string="Case" name="case_count" widget="statinfo"/>
                </button> -->
                <button class="oe_stat_button" type="object"
                        name="view_case"
                        icon="fa-pencil-square-o">
                    <field string="Case" name="case_count" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Case">
                    <group>
                        <field name="case_ids" mode="tree" nolabel="1">
                            <tree editable="bottom" string="Case" default_order="created_date">
                                <field name="case_id"/>
                                <field name="name"/>
                                <field name="case_description"/>
                                <field name="administrative_officer"/>
                                <field name="case_type"/>
                                <field name="created_date" widget="date"/>
                                <field name="changed_date" widget="date"/>
                                <field name="due_date" widget="date"/>
                                <field name="closed_date" widget="date"/>
                                <field name="case_url" groups="base.group_no_one"/>
                                <!-- <field name="created_date" widget="date"/>
                                <field name="case_type" options="{'no_create_edit': True}"/>
                                <field name="case_number" groups="base.group_no_one"/>
                                <field name="office" options="{'no_create_edit': True}" domain="[('type', '=', 'af office')]"/> -->
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
