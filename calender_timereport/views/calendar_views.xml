<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calendar_event_form" model="ir.ui.view">
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <!--
                        <group class="oe_edit_only">
                -->
                <!--
                          <field name='company_id' invidible="1"/>
                          <field name="project_id" domain="[('company_id', '=', company_id), ('allow_timesheets', '=', True)]" />
                -->
                <field name="project_id" domain="[('allow_timesheets', '=', True)]"/>
                <field name="task_id" attrs="{'invisible': [('project_id', '=', False)]}"
                       context="{'default_project_id': project_id}"/>
                <button name="create_timereport" string="Time Report" type="object" class="oe_highlight"
                        attrs="{'invisible': [('project_id', '=', False)]}"/>
                <!--
                        </group>
                -->
            </field>
        </field>
    </record>
</odoo>