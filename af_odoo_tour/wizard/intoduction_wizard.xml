<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="introduction_tour_form" model="ir.ui.view">
        <field name="name">introduction.tour.wizard.form</field>
        <field name="model">introduction.tour.wizard</field>
        <field name="arch" type="xml">
            <form string="Search Partner" create="false">
                <h1>Search Partner</h1>
                <notebook>
                    <page string="When in contact">
                        <group>
                            <group>
                                <field name="identification"/>
                                <field name="social_sec_nr_search"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                <button name="search_jobseeker" string="search" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>

                <notebook>
                    <page name="upcomming_appoitments" string="Upcomming Appointment">
                        <field name="upcomming_appoitment_ids" readonly="1">
                            <tree>
                                <field name="type_id"/>
                                <field name="start"/>
                                <field name="duration"/>
                                <field name="stop"/>
                                <field name="user_id"/>
                                <field name="channel"/>
                                <field name="location"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Case" name="case">
                        <field name="case_ids" readonly="1">
                            <tree>
                                <field name="case_id"/>
                                <field name="name"/>
                                <field name="case_description"/>
                                <field name="administrative_officer"/>
                                <field name="case_type"/>
                                <field name="created_date"/>
                                <field name="changed_date"/>
                                <field name="due_date"/>
                                <field name="closed_date"/>
                                <field name="case_url"/>
                            </tree>
                        </field>

                    </page>
                    <page string="History">
                        <field name="daily_note_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="note"/>
                                <field name="note_date"/>
                                <field name="note_type"/>
                                <field name="note_number"/>
<!--
                                <field name="office"/>
-->
                            </tree>
                        </field>

                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="odoo_intoduction_tour_action" model="ir.actions.act_window">
        <field name="name">Introduction Tour</field>
        <field name="res_model">introduction.tour.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="res_id" ref="introduction_tour_record"/>
    </record>

<!--    <act_window id="introduction_tour_wizard"-->
<!--                name="Search Partner"-->
<!--                src_model="res.partner"-->
<!--                res_model="introduction.tour.wizard"-->
<!--                view_mode="form"-->
<!--                target="inline"-->
<!--                key2="client_action_multi"/>-->

    <menuitem id="introduction_tour_wizard"
              name="Workspace"
              action="odoo_intoduction_tour_action"
              sequence="3"/>

    <!--
    Menu hidden since the form is accessed in the main menu_hr_employee_360
         <menuitem
                id="menu_hr_employee_360"
                name="HR 360"
                parent="res_partner_jobseeker_search_wizard_menu"
                groups="hr.group_hr_manager,base.group_no_one"
                action="open_view_employee_360_list"
                sequence="99"/>
    -->

</odoo>
