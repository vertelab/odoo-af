<odoo>
    <data>
        <record model="ir.ui.view" id="view_contact_messages_search">
            <field name="name">mail.message.search</field>
            <field name="model">mail.message</field>
            <field name="priority">25</field>
            <field name="arch" type="xml">
                <search string="Messages Search">
                    <filter string="Contact Messages"
                            name="contact_messages" help="Contact Messages"
                            domain="[('model', '=', 'res.partner')]"/>

                </search>
            </field>
        </record>

        <record id="action_view_contact_mail_message" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">mail.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_contact_messages': 1}</field>
            <field name="search_view_id" ref="view_contact_messages_search"/>
        </record>

        <menuitem name="Messages" id="contact_menu_mail_messages" parent="contacts.menu_contacts" action="action_view_contact_mail_message" sequence="200"/>

    </data>
</odoo>
