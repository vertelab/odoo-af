<odoo>
    <data>
        <record id="on_boarding_email_template" model="mail.template">
            <field name="name">Welcome to our agency</field>
            <field name="model_id" ref="automatic_customer_dialogue.model_partner_event"/>
            <field name="subject">Welcome to Our Agency</field>
            <field name="email_to">${ctx['partner_email'] | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/><br/>
                        Welcome to Our Agency.
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="False"/>
            <field name="lang">${ctx['partner_lang']}</field>
            <field name="auto_delete" eval="True"/>
        </record>

