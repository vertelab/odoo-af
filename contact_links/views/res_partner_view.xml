<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_for_links" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherited.links</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button type="object" class="oe_stat_button fa fa-link 4x" name="action_partner_link"
                        context="{'default_partner_id': active_id}">
                    Links
                </button>
            </div>
            <xpath expr="//notebook" position="inside">
                <page name="partner_link" string="Links">
                    <field name="link_ids" mode="kanban">
                        <kanban>
                            <field name="name"/>
                            <field name='id'/>
                            <field name='image'/>
                            <field name='link'/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-att-class="oe_kanban_global_click" style="height:80px;width:150px">
                                        <div class="o_kanban_image" style="width:100px">
                                            <t t-if="record.image.raw_value">
                                                <img alt="" style="width:70px;max-height:60px"
                                                     t-att-src="kanban_image('partner.links', 'image', record.id.raw_value)"/>
                                            </t>
                                            <t t-if="!record.image.raw_value">
                                                <img alt="Avatar" style="width:70px;max-height:60px"
                                                     t-att-src="_s + &quot;/base/static/img/avatar.png&quot;"/>
                                            </t>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <a t-att-href="record.link.raw_value" target='new'
                                               t-if="record.link.raw_value">
                                                <field name="name"/>
                                            </a>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

