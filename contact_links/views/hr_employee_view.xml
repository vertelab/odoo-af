<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <record id="search_jobseeker_form_for_links" model="ir.ui.view">
        <field name="name">view.res.partner.employer.form.inherited.links</field>
        <field name="model">hr.employee.jobseeker.search.wizard</field>
        <field name="inherit_id" ref="hr_360_view.search_jobseeker_form"/>
        <field name="arch" type="xml">
             <!--<div name="button_box" position="inside">
                 <button type="object" class="oe_stat_button fa fa-link 4x" name="action_partner_link"
                        context="{'default_partner_id': active_id}">
                    Links
                </button> 
            </div>-->
            <page name="history" position="after">
                <page name="partner_link" string="Links">
                    <field name="link_ids" mode="kanban">
                        <kanban>
                            <field name="name"/>
                            <field name='id'/>
                            <field name='image'/>
                            <field name='link'/>
                            <templates>
                            
                                <t t-name="kanban-box">
                                <a t-att-href="record.link.raw_value" target="new" t-if="record.link.raw_value" style="flex:none;width:20em;">
                                    <div t-att-class="oe_kanban_global_click" style="height:40px;width:40px">
                                        <div class="o_kanban_image" style="height:100%">
                                            <t t-if="record.image.raw_value">
                                                <img alt="" style="max-width:100%;height:100%" t-att-src="kanban_image('partner.links', 'image', record.id.raw_value)"/>
                                            </t>
                                            <t t-if="!record.image.raw_value">
                                                <img alt="Avatar" style="width:70px;max-height:60px" t-att-src="_s + &quot;/base/static/img/avatar.png&quot;"/>
                                            </t>
                                        </div>
                                        <div class="oe_kanban_details">
                                            
                                                <field name="name"/>
                                    
                                        </div>
                                    </div>
                                    </a>
                                </t>
                                
                                
                            </templates>
                        </kanban>
                    </field>
                </page>
            </page>
        </field>
    </record>
</odoo>