<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <div t-name="ContactLinks" class="o-contact-links">
        <t t-if="widget.data">
            <div class="o_field_many2many o_field_widget o_field_x2many o_field_x2many_kanban o_readonly_modifier"  data-original-title="" title="">
                <div class="o_kanban_view o_kanban_ungrouped">
                    <t t-foreach="widget.data" t-as="link">
                        <a t-if="link.url" t-att-href="link.url" t-att-target="link.target || '_self'" style="flex:none;width:20em;" modifiers="{}" class="o_kanban_record" tabindex="0" role="article">
                            <div style="height:40px;width:40px" modifiers="{}">
                                <div class="o_kanban_image" style="height:100%" modifiers="{}">
                                    <img alt="Link Icon" style="width:40px;max-height:40px" t-att-src="link.icon" modifiers="{}"/>
                                </div>
                                <div class="oe_kanban_details" modifiers="{}">
                                    <span t-esc="link.name"/>
                                </div>
                            </div>
                        </a>
                        <div t-if="!link.url" t-att-href="link.url" t-att-target="link.target || '_self'" style="flex:none;width:20em;" modifiers="{}" class="o_kanban_record" tabindex="0" role="article">
                            <div style="height:40px;width:40px" modifiers="{}">
                                <div class="o_kanban_image" style="height:100%" modifiers="{}">
                                    <img alt="Link Icon" style="width:40px;max-height:40px" t-att-src="link.icon" modifiers="{}"/>
                                </div>
                                <div class="oe_kanban_details" modifiers="{}">
                                    <span t-esc="link.name"/>
                                    <span>Broken link!</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>   
            </div>
        </t>
    </div>
</templates>