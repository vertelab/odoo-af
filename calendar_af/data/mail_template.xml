<odoo>
    <data>
        <record id="email_template_low_occasion_warning" model="mail.template">
            <field name="name">Low occasions warning</field>
            <field name="model_id" ref="calendar_af.model_calendar_appointment"/>
            <field name="subject">Low occasions warning</field>
            <field name="email_to">${object.operation_id.app_warn_emp_ids.email | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/><br/>
                        You are running low on occasions for meeting type ${object.type_id.name} at office 
                        ${object.operation_id.display_name}.
                        <br/>
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="False"/>
            <field name="lang">${object.user_id.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
