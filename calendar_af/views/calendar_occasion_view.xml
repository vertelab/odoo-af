<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_calendar_occasion_calendar" model="ir.ui.view">
        <field name="name">calendar.occasion.calendar</field>
        <field name="model">calendar.occasion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <calendar string="Occasions" date_start="start" date_stop="stop" date_delay="duration"
            color="user_id">
                <field name="name" />
            </calendar>
        </field>
    </record>

    <record id="view_calendar_occasion_tree" model="ir.ui.view">
        <field name="name">calendar.occasion.tree</field>
        <field name="model">calendar.occasion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <tree string="Occasions">
                <field name="name" />
                <field name="start" />
                <field name="stop" />
                <field name="appointment_id" />
            </tree>
        </field>
    </record>

    <record id="view_calendar_occasion_form" model="ir.ui.view">
        <field name="name">calendar.occasion.form</field>
        <field name="model">calendar.occasion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,request,ok,booked,fail"/>
                </header>
                <sheet>
                    <group string="Create occasion">
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="start"/>
                            <field name="stop" invisible="0"/>
                            <field name="duration_selection" widget="radio" invisible="1"/>
                            <field name="duration" invisible="0" />
                        </group>
                        <group>
                            <field name="type_id" domain="[('channel', '=', %(calendar_channel.channel_local)d)]" required="1" />
                            <field name="location_id" required="1" />
                            <field name="user_id" string="Case worker" widget="many2oneattendee" placeholder="Select case worker..." required="1" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
