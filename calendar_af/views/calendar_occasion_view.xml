<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_calendar_occasion_calendar" model="ir.ui.view">
        <field name="name">calendar.occasion.calendar</field>
        <field name="model">calendar.occasion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <calendar string="Occasions" date_start="start" date_stop="stop" date_delay="duration">
                <field name="name" />
            </calendar>
        </field>
    </record>

    <record id="view_calendar_occasion_tree" model="ir.ui.view">
        <field name="name">calendar.occasion.tree</field>
        <field name="model">calendar.occasion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="name" />
                <field name="start" />
                <field name="stop" />
                <field name="appointment_id" />
            </tree>
        </field>
    </record>

    <record id="view_calendar_occasion_form" model="ir.ui.view">
        <field name="name">calendar.occasion.form</field>
        <field name="model">calendar.occasion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,request,ok,fail"/>
                </header>
                <sheet>
                    <group string="Create occasion">
                        <group>
                            <field name="name" placeholder="e.g. Business Lunch" />
                        </group>
                    </group>
                    <notebook>
                        <page name="page_details" string="Occasion Details">
                            <group>
                                <group>
                                    <field name="start"/>
                                    <field name="stop" invisible="1"/>
                                    <field name="duration_selection" widget="radio"/>
                                    <field name="duration" invisible="1" />
                                </group>
                                <group>
                                    <field name="type_id" domain="[('channel_name', '=', 'Local')]" required="1" />
                                    <field name="office" required="1" />
                                    <field name="user_id" string="Case worker" widget="many2oneattendee" placeholder="Select case worker..." required="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
