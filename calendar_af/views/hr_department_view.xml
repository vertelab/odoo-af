<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_department_form_calendar_af_inherited" model="ir.ui.view">
        <field name="name">hr.department.form.calendar_af.inherited</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <field name="reserve_admin_ids" widget="many2many_tags" domain="[('id', 'in', member_ids)]"/>
                    <field name="app_warn_user_ids" widget="many2many_tags" domain="[('id', 'in', member_ids)]"/>
                </group>
                <field name="member_ids" invisible="1"/>
                <notebook>
                    <page name="type_department" string="Appointment warning thresholds">
                        <field name="type_department_ids" mode="tree" nolabel="1">
                            <tree editable="bottom">
                                <field name="type_id"/>
                                <field name="warning_threshold"/>
                            </tree>
                        </field>
                    </page>
                    <page name="mapped_dates" string="Mapped dates">
                        <field name="mapped_dates_ids" mode="tree" nolabel="1">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="from_date"/>
                                <field name="to_date"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </field>
    </record>
</odoo>
