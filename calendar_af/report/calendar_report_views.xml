<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_calendar_report_pivot" model="ir.ui.view">
            <field name="name">report.calendar.appointment.pivot</field>
            <field name="model">report.calendar.appointment</field>
            <field name="arch" type="xml">
                <pivot string="Calendar appointment report" display_quantity="true" disable_linking="True">
                    <field name="occ_start" type="row"/>
                    <field name="type_id" type="col"/>
                    <field name="occ_count" type="measure"/>
                    <field name="app_count" type="measure"/>
                    <field name="add_book_count" type="measure"/>
                    <field name="booked_from_cal" type="measure"/>
                    <field name="free_occ" type="measure"/>
                    <field name="no_overbooked" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- <record id="view_task_project_user_graph" model="ir.ui.view">
            <field name="name">report.project.task.user.graph</field>
            <field name="model">report.project.task.user</field>
