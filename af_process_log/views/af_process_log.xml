<?xml version="1.0"?>
<odoo>
    <record id="view_process_log_tree" model="ir.ui.view">
        <field name="name">af.process.log.tree</field>
        <field name="model">af.process.log</field>
        <field name="arch" type="xml">
            <tree string="AF Process Log">
                <field name="process"/>
                <field name="eventid"/>
                <field name="create_date"/>
                <field name="write_date"/>
                <field name="step"/>
                <field name="error_message"/>
                <field name="status"/>
                <field name="no_tries"/>
                <field name="objectid"/>
            </tree>
        </field>
    </record>
    <record id="view_process_log_form" model="ir.ui.view">
        <field name="name">af.process.log.form</field>
        <field name="model">af.process.log</field>
        <field name="arch" type="xml">
            <form string="AF Process Log">
                <sheet>
                    <group cols="4">
                        <field name="process"/>
                        <field name="eventid"/>
                        <field name="create_date"/>
                        <field name="write_date"/>
                        <field name="step"/>
                        <field name="error_message"/>
                        <field name="status"/>
                        <field name="no_tries"/>
                        <field name="objectid"/>
                    </group>
                    <label for="message"/>
                    <field name="message"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_process_log" model="ir.actions.act_window">
        <field name="name">AF Process Log</field>
        <field name="res_model">af.process.log</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="AF Process Log" id="menu_process_log" action="action_process_log" parent="base.menu_automation" sequence="50"/>
</odoo>
