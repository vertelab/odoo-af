<odoo>
    <data>
        <record id="email_template_calendar_appointment" model="mail.template">
            <field name="name">Calendar Appointment</field>
            <field name="model_id" ref="calendar_af.model_calendar_appointment"/>
            <field name="subject">Calendar Appointment</field>
            <field name="email_to">${object.partner_id.email | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/>
                        <br/>
                        This meeting is booked.
                        % set website_url = object.env['ir.config_parameter'].sudo().get_param('web.base.url')
                        <br/>
                        <br/>
                        View
                        <a href='${website_url}/web#id=${object.id}&amp;view_type=form&amp;model=calendar.appointment'
                           target="_blank">meeting
                        </a>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="False"/>
            <field name="report_template" ref="af_calendar_reports.calendar_appointment_report"/>
            <field name="report_name">Calendar Appointment</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_updated_calendar_appointment" model="mail.template">
            <field name="name">Updated Calendar Appointment</field>
            <field name="model_id" ref="calendar_af.model_calendar_appointment"/>
            <field name="subject">Updated Calendar Appointment</field>
            <field name="email_to">${object.partner_id.email | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/>
                        <br/>
                        This meeting has been updated.
                        % set website_url = object.env['ir.config_parameter'].sudo().get_param('web.base.url')
                        <br/>
                        <br/>
                        View
                        <a href='${website_url}/web#id=${object.id}&amp;view_type=form&amp;model=calendar.appointment'
                           target="_blank">meeting
                        </a>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="False"/>
            <field name="report_template" ref="af_calendar_reports.updated_calendar_appointment_report"/>
            <field name="report_name">Updated Calendar Appointment</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_cancelled_calendar_appointment" model="mail.template">
            <field name="name">Cancelled Calendar Appointment</field>
            <field name="model_id" ref="calendar_af.model_calendar_appointment"/>
            <field name="subject">Cancelled Calendar Appointment</field>
            <field name="email_to">${object.partner_id.email | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/>
                        <br/>
                        This meeting has been cancelled.
                        % set website_url = object.env['ir.config_parameter'].sudo().get_param('web.base.url')
                        <br/>
                        <br/>
                        View
                        <a href='${website_url}/web#id=${object.id}&amp;view_type=form&amp;model=calendar.appointment'
                           target="_blank">cancelled meeting
                        </a>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="user_signature" eval="False"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
