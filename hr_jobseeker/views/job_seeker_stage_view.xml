<odoo>
    <data>
        <record id="hr_jobseeker_stage_form_view" model="ir.ui.view">
            <field name="name">HR Job Seeker Stage</field>
            <field name="model">hr.jobseeker.stage</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="fold"/>
                                <field name="template_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_jobseeker_stage_tree_view" model="ir.ui.view">
            <field name="name">HR Job Seeker Stage</field>
            <field name="model">hr.jobseeker.stage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="fold"/>
                    <field name="template_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_jobseeker_stage_action" model="ir.actions.act_window">
            <field name="name">HR Job Seeker Stage</field>
            <field name="res_model">hr.jobseeker.stage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_hr_job_seeker_stage"
            parent="hr_jobseeker.hr_job_seeker_configuration"
            action="hr_jobseeker.hr_jobseeker_stage_action"
            name="Stages"
            groups="base.group_user"
            sequence="10"/>

    </data>
</odoo>
