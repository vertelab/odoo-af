<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Employers Officer -->

        <!--    Handläggare Arbetsgivare Låg	    Handläggare Arbetsgivare Mellan	    Handläggare Arbetsgivare Hög
            Kan söka på egna kontoret	        Kan söka hela landet	            Söka i hela landet
            Läsa och skriva daganteckingar		                                    Ta bort daganteckningar
            Läsa kundkortet	                    Registrera, förändra kundkort	    Arkivera kundkort
            Kan boka in möten som kommer via lokalkontor		
            Kan läsa ärenden	                Kan uppdatera ärenden	
            Se min egna kalender	            Se kalender på  mitt kontor	        Se allas kalender -->
        <record model="ir.module.category" id="module_category_af_employers">
            <field name="name">Employers Officer</field>
            <field name="description">Allows you to handle employers.</field>
            <field name="sequence">1</field>
        </record>

        <record id="af_employers_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_category_af_employers"/>
            <field name="comment">The user will have acces to local employers.</field>
        </record>

        <record id="af_employers_editor" model="res.groups">
            <field name="name">Editor</field>
            <field name="category_id" ref="module_category_af_employers"/>
            <field name="implied_ids" eval="[(4, ref('af_security.af_employers_officer'))]"/>
            <field name="comment">The user will have acces to all swedish employers.</field>
        </record>

        <!-- Jobseekers Officer -->

        <record model="ir.module.category" id="module_category_af_jobseekers">
            <field name="name">Jobseekers</field>
            <field name="description">Allows you to handle jobseekers.</field>
            <field name="sequence">1</field>
        </record>

        <record id="af_jobseekers_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_category_af_jobseekers"/>
            <field name="comment">The user will have acces to local jobseekers.</field>
        </record>

        <record id="af_jobseekers_editor" model="res.groups">
            <field name="name">Editor</field>
            <field name="category_id" ref="module_category_af_jobseekers"/>
            <field name="implied_ids" eval="[(4, ref('af_jobseekers_officer'))]"/>
            <field name="comment">The user will have acces to all swedish jobseekers.</field>
        </record>

        <!-- Meeting Planner -->

        <record model="ir.module.category" id="module_category_af_meeting">
            <field name="name">Meeting</field>
            <field name="description">Allows you to work with appointments.</field>
            <field name="sequence">1</field>
        </record>

        <record id="af_meeting_planner" model="res.groups">
            <field name="name">Planner</field>
            <field name="category_id" eval="module_category_af_meeting"/>
            <field name="comment">The user will have access to the appointments planner.</field>
        </record>

        <record id="af_meeting_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_category_af_meeting"/>
            <!-- TODO: Remove implied_ids once we think every database is updated. -->
            <field name="implied_ids" eval="[(6, 0, [])]"/>
            <field name="comment">The user will be able to administrate the appointments planner.</field>
        </record>

        <!-- Newsletter -->

        <record model="ir.module.category" id="module_category_af_newsletter">
            <field name="name">Newsletter</field>
            <field name="description">Allows you to handle jobseekers.</field>
            <field name="sequence">1</field>
        </record>

        <record id="af_newsletter_manual" model="res.groups">
            <field name="name">Manual</field>
            <field name="category_id" ref="module_category_af_newsletter"/>
            <field name="comment"></field>
        </record>

        <record id="af_newsletter_automatic" model="res.groups">
            <field name="name">Automatic</field>
            <field name="category_id" ref="module_category_af_newsletter"/>
            <field name="implied_ids" eval="[(4, ref('af_newsletter_manual'))]"/>
            <field name="comment"></field>
        </record>

        <record id="af_newsletter_editor" model="res.groups">
            <field name="name">Editor</field>
            <field name="category_id" ref="module_category_af_newsletter"/>
            <field name="implied_ids" eval="[(4, ref('af_newsletter_automatic'))]"/>
            <field name="comment"></field>
        </record>

        <!-- Support -->

        <record model="ir.module.category" id="module_category_af_support">
            <field name="name">Support</field>
            <field name="description">Allows you to perform technical support.</field>
            <field name="sequence">1</field>
        </record>

        <record id="1_line_support" model="res.groups">
            <field name="name">1st Line</field>
            <field name="category_id" ref="module_category_af_support"/>
            <field name="comment"></field>
        </record>

        <record id="2_line_support" model="res.groups">
            <field name="name">2nd Line</field>
            <field name="category_id" ref="module_category_af_support"/>
            <field name="implied_ids" eval="[(4, ref('1_line_support'))]"/>
            <field name="comment"></field>
        </record>

        <record id="3_line_support" model="res.groups">
            <field name="name">3rd Line</field>
            <field name="category_id" ref="module_category_af_support"/>
            <field name="implied_ids" eval="[(4, ref('2_line_support'))]"/>
            <field name="comment"></field>
        </record>

    </data>

</odoo>
